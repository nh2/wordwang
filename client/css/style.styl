COLOR_TEXT_HIGHLIGHT = #a2b5c6
COLOR_TEXT_LIGHT = #bccddc
COLOR_TEXT_GRAY = #68727b

background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval, deprecatedWebkitStartPoint = false, deprecatedWebkitEndPoint = false)
  if deprecatedWebkitStartPoint && deprecatedWebkitEndPoint
    background-image -webkit-gradient(linear, deprecatedWebkitStartPoint, deprecatedWebkitEndPoint, color-stop(startInterval, startColor), color-stop(endInterval, endColor))
  background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)

@font-face
  font-family: 'Libre Baskerville'
  font-style: normal
  font-weight: 400
  src: local('Libre Baskerville'), local('LibreBaskerville-Regular'), url('/fonts/lib/baskerville.woff') format('woff')

@font-face
  font-family: 'Libre Baskerville'
  font-style: italic
  font-weight: 400
  src: local('Libre Baskerville Italic'), local('LibreBaskerville-Italic'), url('/fonts/lib/baskerville-italic.woff') format('woff')

#login-container
  width: 100%
  height: 100%
  position: absolute
  top: 0
  left: 0
  padding: auto

  #login
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    margin: auto
    height: 28em
    width: 40em
    text-align: center
    font-family: 'Libre Baskerville'

    div.title
      font-size: 3em
      font-weight: 600
      margin: 3em auto .5em auto

    div.blurb
      padding: .5em 1em
      margin-bottom: 1em

    form
      margin: 1em auto
      display: inline-block

      input[type=text]
        width: 18em
      input[type=submit]
        width: 5em



#story-container
  font-family: 'Libre Baskerville'
  font-size: 14pt
  line-height: normal

#middle
  margin: 0 auto
  width: 45%

#end-marker
  width: 5px
  height: 5px
  color: red

#story-container
  position: relative

  div:nth-child(4):after
    content: '<div class="spacer"></div>'

.read-more
  position: absolute
  left: 0
  top: 0
  right: 0
  bottom: 0
  background-linear-gradient(top, white, 0%, #FFFFFF00, 30%)

#next
  display: inline-block
  vertical-align: top
  transition: height 0.5s
  -webkit-transition: height 0.5s

  ul.suggestions
    margin: 1em 0
    list-style: none
    line-height: 40px
    position: absolute

    li.suggestion
      display: inline-block
      padding: .1em .2em
      vertical-align: middle
      position: relative

      transition: all 0.5s
      -webkit-transition: all 0.5s

      span.votes
        border: 1px solid #333
        border-radius: .3em
        padding: .1em .2em
        font-size: 10px
        vertical-align: middle

      span.block
        font-family: 'Libre Baskerville'
        font-style: italic

  ul.suggestionsShown
    position: relative

    li.suggestion
      display: block
      position: absolute
      opacity: 0

#next-box
  background-image: url('/img/progress_overlay.png')
  background-repeat: no-repeat